<mvc:View controllerName="logaligroup.SAPUI5.controller.App"
            xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">  <!-- :mvc nos permite agregar un alias -->
    <Button text="{i18n>showHelloButtonText}" press=".onShowHello"></Button>
    <Input value="{/recipient/name}"
           description="Hello {/recipient/name}" 
           valueLiveUpdate="true"
           width="60%"></Input> <!-- Obtiene el valor del objeto recipient, usando el atributo name. valueLiveUpdate="true" actualiza en tiempo real lo que escribamos -->
</mvc:View>